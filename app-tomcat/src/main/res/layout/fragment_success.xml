<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorFragmentBackground"
    android:orientation="vertical"
    tools:context=".ui.product.fragment.SuccessFragment">

    <include layout="@layout/layout_toolbar_back" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/nav_header_bottom_height"
        android:background="@mipmap/appbar_bottom_background" />


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/content_padding">


        <TextView
            android:padding="@dimen/content_padding"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_content_bg"
            android:text="@string/str_content" />

    </FrameLayout>


</LinearLayout>
