<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorFragmentBackground"
    tools:context="com.yuan7.tomcat.ui.menu.settings.user.UserSettingsFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/content_padding">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="@dimen/settings_item_height"
            android:layout_marginBottom="@dimen/margin_top"
            app:cardCornerRadius="10dp">

            <FrameLayout
                android:id="@+id/fl_item_icon"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/ripple_user_settings_item"
                android:paddingLeft="@dimen/content_padding"
                android:paddingRight="@dimen/content_padding">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|start"
                    android:gravity="center"
                    android:text="@string/user_settings_icon"
                    android:textColor="@color/fontColorYellowDark" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center|end"
                    android:gravity="center"
                    android:orientation="horizontal">


                    <ImageView
                        android:id="@+id/iv_userIcon"
                        android:layout_width="@dimen/icon_size_small"
                        android:layout_height="@dimen/icon_size_small"
                        android:layout_toLeftOf="@+id/tv_back"
                         />

                    <TextView
                        android:id="@+id/tv_back"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableRight="@drawable/ic_keyboard_arrow_right_yellow_dark_24dp"
                        android:textColor="@android:color/black" />
                </LinearLayout>

            </FrameLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="@dimen/settings_item_height"
            android:layout_marginBottom="@dimen/margin_top"
            app:cardCornerRadius="10dp">

            <FrameLayout
                android:id="@+id/fl_item_name"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/ripple_user_settings_item"
                android:paddingLeft="@dimen/content_padding"
                android:paddingRight="@dimen/content_padding">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|start"
                    android:gravity="center"
                    android:text="@string/user_settings_name"
                    android:textColor="@color/fontColorYellowDark" />

                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|end"
                    android:drawableRight="@drawable/ic_keyboard_arrow_right_yellow_dark_24dp"
                    android:gravity="center"
                    android:text="userName"
                    android:textColor="@color/fontColorYellowDark" />
            </FrameLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="@dimen/settings_item_height"
            android:layout_marginBottom="@dimen/margin_top"
            app:cardCornerRadius="10dp">

            <FrameLayout
                android:id="@+id/fl_item_sex"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/ripple_user_settings_item"
                android:paddingLeft="@dimen/content_padding"
                android:paddingRight="@dimen/content_padding">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|start"
                    android:gravity="center"
                    android:text="@string/app_settings_sex"
                    android:textColor="@color/fontColorYellowDark" />

                <TextView
                    android:id="@+id/tv_sex"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|end"
                    android:drawableRight="@drawable/ic_keyboard_arrow_right_yellow_dark_24dp"
                    android:gravity="center"
                    android:text="男"
                    android:textColor="@color/fontColorYellowDark" />
            </FrameLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="@dimen/settings_item_height"
            android:layout_marginBottom="@dimen/margin_top"
            app:cardCornerRadius="10dp">

            <FrameLayout
                android:id="@+id/fl_item_birthday"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/ripple_user_settings_item"
                android:paddingLeft="@dimen/content_padding"
                android:paddingRight="@dimen/content_padding">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|start"
                    android:gravity="center"
                    android:text="@string/user_settings_birthday"
                    android:textColor="@color/fontColorYellowDark" />

                <TextView
                    android:id="@+id/tv_birthday"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|end"
                    android:drawableRight="@drawable/ic_keyboard_arrow_right_yellow_dark_24dp"
                    android:gravity="center"
                    android:text="1999.9.9"
                    android:textColor="@color/fontColorYellowDark" />
            </FrameLayout>

        </android.support.v7.widget.CardView>


        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="@dimen/settings_item_height"
            android:layout_marginBottom="@dimen/margin_top"
            app:cardCornerRadius="10dp">

            <FrameLayout
                android:id="@+id/fl_item_level"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/ripple_user_settings_item"
                android:paddingLeft="@dimen/content_padding"
                android:paddingRight="@dimen/content_padding">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|start"
                    android:gravity="center"
                    android:text="@string/user_settings_level"
                    android:textColor="@color/fontColorYellowDark" />

                <TextView
                    android:id="@+id/tv_levelNum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|end"
                    android:layout_marginRight="24dp"
                    android:gravity="center"
                    android:text="LV 7 连长"
                    android:textColor="@color/fontColorYellowDark" />
            </FrameLayout>

        </android.support.v7.widget.CardView>

    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center"
        android:padding="@dimen/dp_56">

        <Button
            android:id="@+id/btn_unLogin"
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:layout_gravity="center"
            android:background="@drawable/shape_btn_red_bg"
            android:text="退出登陆"
            android:textColor="@color/fontColorWhite" />

    </FrameLayout>

</FrameLayout>
