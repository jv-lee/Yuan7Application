<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/item_layout_margin_bottom_or_top"
    android:layout_marginLeft="@dimen/item_layout_margin_left_or_right"
    android:layout_marginRight="@dimen/item_layout_margin_left_or_right"
    android:background="@drawable/item_background"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/item_layout_padding_bottom_or_top"
        android:paddingLeft="@dimen/item_layout_padding_left_or_right"
        android:paddingRight="@dimen/item_layout_padding_left_or_right"
        android:paddingTop="@dimen/item_layout_padding_bottom_or_top">

        <TextView
            android:id="@+id/tv_rankLevel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:background="@mipmap/item_icon_one"
            android:gravity="center"
            android:textSize="@dimen/font_size_big"
            android:textStyle="bold" />

        <com.yuan7.tomcat.widget.roundImageView.RoundedImageView
            android:id="@+id/iv_icon"
            android:layout_width="@dimen/icon_size_center"
            android:layout_height="@dimen/icon_size_center" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="8dp">

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="top"
                android:text="userName"
                android:textColor="@color/fontColorBlack"
                android:textSize="14sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tv_levelNum"
                        android:layout_width="56dp"
                        android:layout_height="16dp"
                        android:layout_marginLeft="5dp"
                        android:background="@drawable/shape_name_bg"
                        android:gravity="center"
                        android:text="LV12"
                        android:textColor="@color/colorWhite"
                        android:textSize="@dimen/font_size_small_to" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/level_icon" />

                </FrameLayout>

                <TextView
                    android:id="@+id/tv_levelName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_5"
                    android:text="连长"
                    android:textColor="@color/fontColorBlack"
                    android:textSize="@dimen/font_size_small_to" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_sendCount"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="发帖 1768"
                    android:textColor="@color/fontColorGray"
                    android:textSize="10dp" />

                <TextView
                    android:id="@+id/tv_replyCount"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="回帖 1768"
                    android:textColor="@color/fontColorGray"
                    android:textSize="10dp" />


                <TextView
                    android:id="@+id/tv_friendCount"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="关注 1768"
                    android:textColor="@color/fontColorGray"
                    android:textSize="10dp" />


            </LinearLayout>

        </FrameLayout>

    </LinearLayout>

</LinearLayout>