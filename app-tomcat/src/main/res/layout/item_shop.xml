<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/content_margin_small"
    android:layout_marginRight="@dimen/content_margin_small"
    android:layout_marginTop="@dimen/content_margin_small"
    android:background="@drawable/item_background"
    android:orientation="vertical"
    android:padding="@dimen/content_padding">

    <ImageView
        android:id="@+id/iv_image"
        android:layout_width="match_parent"
        android:layout_height="106dp"
        android:scaleType="fitXY" />

    <TextView
        android:id="@+id/tv_shopName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_top"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="价值100元京东卡"
        android:textColor="@color/fontColorBlack"
        android:textSize="@dimen/font_size_small" />

    <TextView
        android:id="@+id/tv_shopPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="50000金币"
        android:textColor="@color/fontColorRed"
        android:textSize="@dimen/font_size_small" />

</LinearLayout>