<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorPrimary"
    android:orientation="vertical">

    <include layout="@layout/layout_nav_header" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@mipmap/background"
            android:clickable="true"
            android:orientation="vertical">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/nav_header_bottom_height"
                android:background="@mipmap/appbar_bottom_background" />


            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <RelativeLayout
                        android:id="@+id/item_friend"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_56"
                        android:layout_marginLeft="@dimen/content_margin"
                        android:background="?android:attr/selectableItemBackground"
                        android:clickable="true"
                        android:gravity="center_vertical">

                        <ImageView
                            android:id="@+id/iv_friend_icon"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:src="@mipmap/menu_friend_icon_normal" />

                        <TextView
                            android:id="@+id/tv_friend"
                            android:layout_width="76dp"
                            android:layout_height="match_parent"
                            android:layout_toRightOf="@+id/iv_friend_icon"
                            android:gravity="start|center"
                            android:text="@string/menu_item_friend"
                            android:textColor="@color/fontColorWhite"
                            android:textSize="@dimen/font_size_center" />

                        <TextView
                            android:id="@+id/tv_friendNum"
                            android:layout_width="56dp"
                            android:layout_height="match_parent"
                            android:layout_toRightOf="@+id/tv_friend"
                            android:gravity="center"
                            android:text="(734)"
                            android:textColor="@color/fontColorWhite" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/item_post"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_56"
                        android:layout_marginLeft="@dimen/content_margin"
                        android:background="?android:attr/selectableItemBackground"
                        android:clickable="true"
                        android:gravity="center_vertical">

                        <ImageView
                            android:id="@+id/iv_post_icon"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:src="@mipmap/menu_tiezi_icom_normal" />

                        <TextView
                            android:id="@+id/tv_post"
                            android:layout_width="76dp"
                            android:layout_height="match_parent"
                            android:layout_toRightOf="@+id/iv_post_icon"
                            android:gravity="start|center"
                            android:text="@string/menu_item_post"
                            android:textColor="@color/fontColorWhite"
                            android:textSize="@dimen/font_size_center" />

                        <TextView
                            android:id="@+id/tv_postNum"
                            android:layout_width="56dp"
                            android:layout_height="match_parent"
                            android:layout_toRightOf="@+id/tv_post"
                            android:gravity="center"
                            android:text="(734)"
                            android:textColor="@color/fontColorWhite" />

                    </RelativeLayout>


                    <RelativeLayout
                        android:id="@+id/item_message"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_56"
                        android:layout_marginLeft="@dimen/content_margin"
                        android:background="?android:attr/selectableItemBackground"
                        android:clickable="true"
                        android:gravity="center_vertical">

                        <ImageView
                            android:id="@+id/iv_message_icon"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:src="@mipmap/menu_message_icom_normal" />

                        <TextView
                            android:id="@+id/tv_message"
                            android:layout_width="76dp"
                            android:layout_height="match_parent"
                            android:layout_toRightOf="@+id/iv_message_icon"
                            android:gravity="start|center"
                            android:text="@string/menu_item_message"
                            android:textColor="@color/fontColorWhite"
                            android:textSize="@dimen/font_size_center" />

                        <FrameLayout
                            android:layout_width="56dp"
                            android:layout_height="match_parent"
                            android:layout_toRightOf="@+id/tv_message">

                            <TextView
                                android:id="@+id/tv_messagedNum"
                                android:layout_width="56dp"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:text="(734)"
                                android:textColor="@color/fontColorWhite" />

                            <ImageView
                                android:id="@+id/iv_point"
                                android:layout_width="10dp"
                                android:layout_height="10dp"
                                android:layout_gravity="right"
                                android:layout_marginRight="10dp"
                                android:layout_marginTop="10dp"
                                android:src="@drawable/num_oval" />
                        </FrameLayout>


                    </RelativeLayout>


                    <RelativeLayout
                        android:id="@+id/item_shop"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_56"
                        android:layout_marginLeft="@dimen/content_margin"
                        android:background="?android:attr/selectableItemBackground"
                        android:clickable="true"
                        android:gravity="center_vertical">

                        <ImageView
                            android:id="@+id/iv_shop_icon"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:src="@mipmap/menu_gift_icom_normal" />

                        <TextView
                            android:id="@+id/tv_shop"
                            android:layout_width="76dp"
                            android:layout_height="match_parent"
                            android:layout_toRightOf="@+id/iv_shop_icon"
                            android:gravity="start|center"
                            android:text="@string/menu_item_shop"
                            android:textColor="@color/fontColorWhite"
                            android:textSize="@dimen/font_size_center" />

                        <TextView
                            android:id="@+id/tv_shopNum"
                            android:layout_width="56dp"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="@dimen/content_margin_small"
                            android:layout_toRightOf="@+id/tv_shop"
                            android:gravity="center"
                            android:textColor="@color/fontColorWhite" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/item_record"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_56"
                        android:layout_marginLeft="@dimen/content_margin"
                        android:background="?android:attr/selectableItemBackground"
                        android:clickable="true"
                        android:gravity="center_vertical">

                        <ImageView
                            android:id="@+id/iv_record_icon"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:src="@mipmap/menu_store_icom_normal" />

                        <TextView
                            android:id="@+id/tv_record"
                            android:layout_width="76dp"
                            android:layout_height="match_parent"
                            android:layout_toRightOf="@+id/iv_record_icon"
                            android:gravity="start|center"
                            android:text="@string/menu_item_record"
                            android:textColor="@color/fontColorWhite"
                            android:textSize="@dimen/font_size_center" />

                        <TextView
                            android:id="@+id/tv_recordNum"
                            android:layout_width="56dp"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="@dimen/content_margin_small"
                            android:layout_toRightOf="@+id/tv_record"
                            android:gravity="center"
                            android:textColor="@color/fontColorWhite" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/item_userSettings"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_56"
                        android:layout_marginLeft="@dimen/content_margin"
                        android:background="?android:attr/selectableItemBackground"
                        android:clickable="true"
                        android:gravity="center_vertical">

                        <ImageView
                            android:id="@+id/iv_userSettings_icon"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:src="@mipmap/menu_presonal_icom_normal" />

                        <TextView
                            android:id="@+id/tv_userSettings"
                            android:layout_width="76dp"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:layout_toRightOf="@+id/iv_userSettings_icon"
                            android:gravity="start|center"
                            android:text="@string/menu_item_userSettings"
                            android:textColor="@color/fontColorWhite"
                            android:textSize="@dimen/font_size_center" />

                        <TextView
                            android:layout_width="56dp"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="@dimen/content_margin_small"
                            android:layout_toRightOf="@+id/tv_userSettings"
                            android:gravity="center"
                            android:textColor="@color/fontColorWhite" />

                    </RelativeLayout>


                    <RelativeLayout
                        android:id="@+id/item_code"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_56"
                        android:layout_marginLeft="@dimen/content_margin"
                        android:background="?android:attr/selectableItemBackground"
                        android:clickable="true"
                        android:gravity="center_vertical">

                        <ImageView
                            android:id="@+id/iv_code_icon"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:src="@mipmap/menu_code_icon_normal" />

                        <TextView
                            android:id="@+id/tv_code"
                            android:layout_width="76dp"
                            android:layout_height="match_parent"
                            android:layout_toRightOf="@+id/iv_code_icon"
                            android:gravity="start|center"
                            android:text="@string/menu_item_code"
                            android:textColor="@color/fontColorWhite"
                            android:textSize="@dimen/font_size_center" />

                        <TextView
                            android:id="@+id/tv_codeNum"
                            android:layout_width="56dp"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="@dimen/content_margin_small"
                            android:layout_toRightOf="@+id/tv_code"
                            android:gravity="center"
                            android:textColor="@color/fontColorWhite" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/item_appSettings"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_46"
                        android:background="?android:attr/selectableItemBackground"
                        android:clickable="true"
                        android:gravity="center"
                        android:visibility="gone">

                        <ImageView
                            android:id="@+id/iv_appSettings_icon"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@mipmap/menu_friend_icon_normal" />

                        <TextView
                            android:id="@+id/tv_appSettings"
                            android:layout_width="76dp"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:layout_toRightOf="@+id/iv_appSettings_icon"
                            android:gravity="start|center"
                            android:text="@string/menu_item_appSettings"
                            android:textColor="@color/fontColorWhite"
                            android:textSize="16sp" />

                        <TextView
                            android:layout_width="56dp"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="@dimen/content_margin_small"
                            android:layout_toRightOf="@+id/tv_appSettings"
                            android:gravity="center"
                            android:textColor="@color/fontColorWhite" />

                    </RelativeLayout>

                </LinearLayout>

            </ScrollView>

        </LinearLayout>


</LinearLayout>