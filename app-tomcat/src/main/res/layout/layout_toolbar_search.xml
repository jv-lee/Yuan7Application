<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/toolbar_layout_height"
    android:background="@mipmap/appbar_background"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/toolbar_content_height"
        android:layout_marginTop="@dimen/status_bar_height"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_left"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="left"
            android:layout_weight="2"
            android:clickable="true"
            android:src="@drawable/selector_appbar_back" />

        <EditText
            android:id="@+id/et_search"
            android:layout_width="0dp"
            android:layout_height="36dp"
            android:layout_gravity="center"
            android:layout_weight="8"
            android:background="@drawable/shape_content_bg"
            android:hint="输入内容"
            android:maxLines="1"
            android:paddingLeft="@dimen/content_margin"
            android:textColor="@android:color/white"
            android:textSize="@dimen/font_size_center" />

        <ImageView
            android:id="@+id/iv_right"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:layout_weight="2"
            android:background="?android:attr/selectableItemBackground"
            android:clickable="true"
            android:src="@drawable/selector_appbar_search"
            android:visibility="visible" />

    </LinearLayout>

</LinearLayout>