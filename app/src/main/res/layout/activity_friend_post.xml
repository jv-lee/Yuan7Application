<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context="com.yuan7.tomcat.ui.post.friend.FriendActivity">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/app_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/iosBackTheme.AppBarOverlay">

        <android.support.design.widget.CollapsingToolbarLayout
            android:id="@+id/toolbar_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:contentScrim="?attr/colorPrimary"
            app:layout_scrollFlags="snap|exitUntilCollapsed">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/status_bar_height"
                android:gravity="center|bottom"
                android:orientation="vertical"
                android:padding="@dimen/content_padding"
                app:layout_collapseMode="parallax"
                app:layout_collapseParallaxMultiplier="0.7">

                <com.yuan7.tomcat.widget.roundImageView.RoundedImageView
                    android:id="@+id/riv_userIcon"
                    android:layout_width="@dimen/icon_size_center"
                    android:layout_height="@dimen/icon_size_center"
                    android:scaleType="fitCenter"
                    android:src="@mipmap/icon"
                    app:riv_oval="true" />

                <TextView
                    android:id="@+id/tv_userName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/content_margin_small"
                    android:text="userName" />

                <TextView
                    android:id="@+id/tv_userLevel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="LV:12" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/content_margin_small"
                    android:orientation="horizontal">

                    <FrameLayout
                        android:layout_width="0dp"
                        android:layout_height="36dp"
                        android:layout_weight="1">

                        <TextView
                            android:id="@+id/tv_friendCount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:text="0" />

                        <TextView
                            android:id="@+id/tv_likeText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal|bottom"
                            android:text="@string/str_like" />
                    </FrameLayout>

                    <FrameLayout
                        android:layout_width="0dp"
                        android:layout_height="36dp"
                        android:layout_weight="1">

                        <TextView
                            android:id="@+id/tv_sendCount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:text="0" />

                        <TextView
                            android:id="@+id/tv_postText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal|bottom"
                            android:text="@string/str_send" />
                    </FrameLayout>


                    <FrameLayout
                        android:layout_width="0dp"
                        android:layout_height="36dp"
                        android:layout_weight="1">

                        <TextView
                            android:id="@+id/tv_replyCount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:text="0" />

                        <TextView
                            android:id="@+id/tv_replyText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal|bottom"
                            android:text="@string/str_reply" />
                    </FrameLayout>


                </LinearLayout>

            </LinearLayout>

            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="@dimen/toolbar_content_height"
                android:layout_marginTop="@dimen/status_bar_height"
                app:layout_collapseMode="pin"
                app:navigationIcon="@drawable/ic_back"
                app:popupTheme="@style/iosBackTheme.PopupOverlay">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <com.yuan7.tomcat.widget.roundImageView.RoundedImageView
                        android:id="@+id/riv_userIcon_close"
                        android:layout_width="@dimen/icon_size_small"
                        android:layout_height="@dimen/icon_size_small"
                        android:layout_gravity="center_vertical|end"
                        android:layout_marginRight="@dimen/content_margin"
                        android:scaleType="fitCenter"
                        android:src="@mipmap/icon"
                        android:visibility="gone"
                        app:riv_oval="true" />

                    <ImageView
                        android:layout_marginRight="@dimen/content_margin_small"
                        android:layout_gravity="end"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:src="@drawable/ic_add_white_24dp" />

                </FrameLayout>

            </android.support.v7.widget.Toolbar>
        </android.support.design.widget.CollapsingToolbarLayout>

        <android.support.design.widget.TabLayout
            android:id="@+id/tab"
            android:layout_width="match_parent"
            android:layout_height="@dimen/appbar_tab_select"
            android:layout_gravity="bottom"
            android:background="@color/colorAccent"
            app:tabGravity="center"
            app:tabIndicatorColor="@android:color/transparent"
            app:tabMode="fixed"
            app:tabSelectedTextColor="@color/colorPrimaryDark"
            app:tabTextColor="@color/colorPrimary">

        </android.support.design.widget.TabLayout>

    </android.support.design.widget.AppBarLayout>

    <com.yuan7.tomcat.widget.NoScrollViewPager
        android:id="@+id/vp_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior" />

</android.support.design.widget.CoordinatorLayout>