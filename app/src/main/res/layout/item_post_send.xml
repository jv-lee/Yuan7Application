<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:padding="@dimen/content_padding"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="@dimen/item_height_56">

    <FrameLayout
        android:id="@+id/rl_date"
        android:layout_width="wrap_content"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tv_day"
            android:text="28"
            android:textSize="@dimen/font_size_center"
            android:layout_gravity="top|center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_month"
            android:text="八月"
            android:textSize="@dimen/font_size_center"
            android:layout_gravity="bottom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </FrameLayout>

    <FrameLayout
        android:layout_marginLeft="@dimen/content_margin"
        android:layout_toRightOf="@+id/rl_date"
        android:layout_width="wrap_content"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tv_title"
            android:text="帖子标题"
            android:layout_gravity="top"
            android:layout_width="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:textSize="@dimen/font_size_center"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_content"
            android:layout_gravity="bottom"
            android:text="帖子内容区域"
            android:ellipsize="end"
            android:maxLines="1"
            android:textSize="@dimen/font_size_center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </FrameLayout>

</RelativeLayout>

    <LinearLayout
        android:layout_marginTop="@dimen/content_margin"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_readCount"
            android:gravity="center_vertical"
            android:text="3210"
            android:drawablePadding="@dimen/content_padding_small"
            android:textSize="@dimen/font_size_small"
            android:drawableLeft="@drawable/ic_chat_white_12dp"
            android:layout_weight="1"
            android:maxLines="1"
            android:maxLength="6"
            android:ellipsize="end"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />


        <TextView
            android:id="@+id/tv_inputCount"
            android:drawablePadding="@dimen/content_padding_small"
            android:textSize="@dimen/font_size_small"
            android:gravity="center_vertical"
            android:text="3210"
            android:maxLines="1"
            android:maxLength="6"
            android:ellipsize="end"
            android:drawableLeft="@drawable/ic_chat_white_12dp"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_niceCount"
            android:drawablePadding="@dimen/content_padding_small"
            android:textSize="@dimen/font_size_small"
            android:gravity="center_vertical"
            android:text="3210"
            android:maxLines="1"
            android:maxLength="6"
            android:ellipsize="end"
            android:drawableLeft="@drawable/ic_thumb_up_white_12dp"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />

        <TextView
            android:drawablePadding="@dimen/content_padding_small"
            android:textSize="@dimen/font_size_small"
            android:gravity="center"
            android:text="查看主题"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />
    </LinearLayout>
    
    <View
        android:layout_marginTop="@dimen/content_margin_small"
        android:background="@color/colorPrimaryDark"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"/>

</LinearLayout>