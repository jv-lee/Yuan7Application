<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/layout_nav_header" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#C2C2CE"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_friend"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_46"
            android:background="?android:attr/selectableItemBackground"
            android:clickable="true"
            android:drawableLeft="@drawable/ic_group_black_24dp"
            android:drawablePadding="10dp"
            android:gravity="start|center"
            android:paddingLeft="@dimen/dp_16"
            android:text="我的好友"
            android:textSize="16sp" />


        <TextView
            android:id="@+id/tv_post"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_46"
            android:background="?android:attr/selectableItemBackground"
            android:clickable="true"
            android:drawableLeft="@drawable/ic_border_color_black_24dp"
            android:drawablePadding="10dp"
            android:gravity="start|center"
            android:paddingLeft="@dimen/dp_16"
            android:text="我的发帖"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_message"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_46"
            android:background="?android:attr/selectableItemBackground"
            android:clickable="true"
            android:drawableLeft="@drawable/ic_chat_black_24dp"
            android:drawablePadding="10dp"
            android:gravity="start|center"
            android:paddingLeft="@dimen/dp_16"
            android:text="我的消息"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_shopHome"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_46"
            android:background="?android:attr/selectableItemBackground"
            android:clickable="true"
            android:drawableLeft="@drawable/ic_shopping_cart_black_24dp"
            android:drawablePadding="10dp"
            android:gravity="start|center"
            android:paddingLeft="@dimen/dp_16"
            android:text="金币商城"
            android:textSize="16sp" />

    </LinearLayout>

</LinearLayout>