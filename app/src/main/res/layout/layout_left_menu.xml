<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/layout_nav_header" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#C2C2CE"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_friend"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_46"
            android:background="?android:attr/selectableItemBackground"
            android:clickable="true"
            android:drawableLeft="@drawable/ic_group_gray_24dp"
            android:drawablePadding="10dp"
            android:gravity="start|center"
            android:paddingLeft="@dimen/dp_16"
            android:text="@string/menu_item_friend"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="16sp" />


        <TextView
            android:id="@+id/tv_post"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_46"
            android:background="?android:attr/selectableItemBackground"
            android:clickable="true"
            android:drawableLeft="@drawable/ic_border_gray_24dp"
            android:drawablePadding="10dp"
            android:gravity="start|center"
            android:textColor="@color/colorPrimaryDark"
            android:paddingLeft="@dimen/dp_16"
            android:text="@string/menu_item_post"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_message"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_46"
            android:background="?android:attr/selectableItemBackground"
            android:clickable="true"
            android:drawableLeft="@drawable/ic_chat_gray_24dp"
            android:drawablePadding="10dp"
            android:gravity="start|center"
            android:paddingLeft="@dimen/dp_16"
            android:text="@string/menu_item_message"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_shop"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_46"
            android:background="?android:attr/selectableItemBackground"
            android:clickable="true"
            android:drawableLeft="@drawable/ic_shopping_gray_24dp"
            android:drawablePadding="10dp"
            android:gravity="start|center"
            android:textColor="@color/colorPrimaryDark"
            android:paddingLeft="@dimen/dp_16"
            android:text="@string/menu_item_shop"
            android:textSize="16sp" />


        <TextView
            android:id="@+id/tv_userSettings"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_46"
            android:background="?android:attr/selectableItemBackground"
            android:clickable="true"
            android:drawableLeft="@drawable/ic_person_gray_24dp"
            android:drawablePadding="10dp"
            android:gravity="start|center"
            android:paddingLeft="@dimen/dp_16"
            android:text="@string/menu_item_userSettings"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="16sp" />


        <TextView
            android:id="@+id/tv_appSettings"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_46"
            android:background="?android:attr/selectableItemBackground"
            android:clickable="true"
            android:drawableLeft="@drawable/ic_settings_gray_24dp"
            android:textColor="@color/colorPrimaryDark"
            android:drawablePadding="10dp"
            android:gravity="start|center"
            android:paddingLeft="@dimen/dp_16"
            android:text="@string/menu_item_appSettings"
            android:textSize="16sp" />

    </LinearLayout>

</LinearLayout>